{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6"],
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "./public",
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@commands/*": ["src/commands/*"],
            "@convos/*": ["src/convos/*"],
            "@keyboards/*": ["src/keyboards/*"],
            "@models/*": ["src/models/*"],
            "@utils/*": ["src/utils/*"],
            "@bot/*": ["src/core/bot/*"],
            "@db/*": ["src/core/db/*"]
        }
    }
}
